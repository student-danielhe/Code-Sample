@model IEnumerable<TAApplication.Models.Application>

@{
    ViewData["Title"] = "List";
}

<h1>List of Applicants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pursuit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weekBefore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.semesters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.linkedin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModificationDate)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pursuit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.workHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weekBefore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.semesters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.linkedin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModificationDate)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
